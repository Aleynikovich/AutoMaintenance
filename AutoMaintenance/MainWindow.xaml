<Window x:Class="AutoMaintenance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoMaintenance"
        mc:Ignorable="d"
        Background="White"
        Icon="UI Elements/Logos/KUKALOGO.png"
        Title="Launcher" Height="300" Width="500" WindowStyle="None" AllowsTransparency="True" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">

    <Grid Name="MainGrid">
        <Image  Source="UI Elements/Logos/KUKALOGO2.PNG" Opacity=".2" HorizontalAlignment="Left" Height="322" VerticalAlignment="Top" Width="360" Margin="211,31,-71,-53"/>
        <Image Name="KUKALOGO" MouseDown="KUKALOGO_OnMouseDown" Source="UI Elements/Logos/KUKALOGO3.PNG" Margin="-8,8,346,267"></Image>
        <TextBlock Background="Transparent" Margin="9,40,325,233"  Text="KUKA.AutoMaintenace" Foreground="#FF878787" />
        <Image Opacity=".5" Source="UI Elements\MenuButtons\settings.png" Margin="50,104,406,162"/>
        <TextBlock Background="Transparent" Margin="44,139,397,141"  Text="Configurar" Foreground="#FF878787" />
        <Image Opacity=".5" Source="UI Elements\MenuButtons\update.png" Margin="50,188,406,78"/>
        <TextBlock Background="Transparent" Margin="46,222,401,58"  Text="Actualizar" Foreground="#FF878787" />

        <StackPanel Orientation="Horizontal" Opacity=".5" Margin="138,84,357,38">
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
        </StackPanel>

        <Button Name="ImportCreate" Opacity="0" Margin="199,127,186,122" Panel.ZIndex="100"></Button>
        <Image Opacity=".5" Source="UI Elements\MenuButtons\import.png" Margin="196,129,251,128"/>
        <Image Opacity=".5" Source="UI Elements/MenuButtons/right-arrow.png" Margin="251,145,232,137"></Image>
        <Image Opacity=".5" Source="UI Elements/MenuButtons/document.png" Margin="274,136,189,128"></Image>
        <TextBlock Background="Transparent" Margin="193,176,172,104"  Text="Importar y crear informes" Foreground="#FF878787" />

        <Image Opacity=".5" MouseDown="Salir_OnMouseDown" Source="UI Elements/MenuButtons/salir.png" Margin="392,185,71,79"></Image>
        <TextBlock Background="Transparent"  Margin="399,222,73,58"  Text="Salir" Foreground="#FF878787" />

        <Image Opacity=".5" MouseDown="Information_OnMouseDown" Source="UI Elements/MenuButtons/information.png" Margin="392,103,71,161"></Image>
        <TextBlock Background="Transparent"  Margin="399,139,73,141"  Text="Info" Foreground="#FF878787" />

        <TextBlock TextAlignment="Right" MouseDown="UIElement_OnMouseDown" HorizontalAlignment="Right" FontFamily="Siemens Sans" FontSize="7" Margin="0,282,3,0"><Run Text="© 2019 KUKA AG. All rights reserved."/><LineBreak/><Run Text="www.github.com/Aleynikovik"/></TextBlock>

    </Grid>
</Window>
